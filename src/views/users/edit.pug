extends ../base

block content
    h2 Edit Profile
    img(src=loggedInUser.avatarURL, alt=loggedInUser.name, width="200", height="200")
    form(method="POST", enctype="multipart/form-data")
        label(for="name") Name:
        input#name(type="text", name="name", value=loggedInUser.name)
        
        label(for="email") Email:
        input#email(type="email", name="email", value=loggedInUser.email)

        label(for="avatar") Avatar:
        input#avatar(type="file", name="avatar" accept="image/*")

        button(type="submit") Update Profile