extends ../base

block content
    form(method="POST")
        input(placeholder="Nickname", name= "name", type="text", required, maxlength="15")
        input(placeholder="Username", name="username", type="text", required, maxlength="20")
        input(placeholder="Email", name="email", type="email", required, maxlength="50")
        input(placeholder="Password", name="password", type="password", required, maxlength="20")
        input(placeholder="Confirm Password", name="password2", type="password", required, maxlength="20")
        input(type="submit", value="Join")
    hr
    div
        span Already have an account? 
        a(href="/users/login") Login in now &rarr;
